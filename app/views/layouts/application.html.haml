!!!
%html

%head
  %title Noted | Never Forget
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
  %link{:href => "https://fonts.googleapis.com/css?family=Karla|Poppins:400,600", :rel => "stylesheet", :type => "text/css"}

%body

  %header
    #logo
      = link_to '<i class="fa fa-th-large fa-4x"></i>'.html_safe, root_path
    %nav
      %h3
        - if user_signed_in?
          = link_to "New Note", new_note_path
          = link_to "Sign Out", destroy_user_session_path, method: :delete
        - else
          = link_to "Login", new_user_session_path

  %p.notice= notice
  %p.alert= alert

  = yield
