-# Note
.container
  .note_show
    %h1.title= @note.title
    %hr
    .content
      %p= simple_format(@note.content)
    %hr
    = button_to "Edit Note", edit_note_path(@note), method: :get, class: "btn edit-btn"
    = button_to "Delete Note", note_path(@note), method: :delete, data: {confirm: "Are you sure?"}, class: "btn delete-btn"
