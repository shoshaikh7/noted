<div class="container wrapper-with-padding">
  <div class="form-header">
    <h2>Login Here!</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="input-group">
        <%= f.input_field :email, required: false, autofocus: true %>
        <%= f.label :email, "Your Email Address" %>
      </div>
      <div class="input-group">
        <%= f.input_field :password, required: false %>
        <%= f.label :password, "Your Secret Password" %>
      </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Login" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

